{% extends '@Game/base.html.twig' %}

{% block title %}
    {{ parent() }} :: Planets description
{% endblock %}

{% block body %}
    <h1>Planet</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ planet.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ planet.name }}</td>
            </tr>
            <tr>
                <th>X</th>
                <td>{{ planet.x }}</td>
            </tr>
            <tr>
                <th>Y</th>
                <td>{{ planet.y }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ planet.description }}</td>
            </tr>
            <tr>
                <th>Owner</th>
                <td>{{ planet.owner }}</td>
            </tr>
            <tr>
                <th>Resources</th>
                <td>{{ planet.resources }}</td>
            </tr>
            <tr>
                <th>Buildings</th>
                <td>{{ planet.buildings }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('planets_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('planets_edit', { 'id': planet.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
